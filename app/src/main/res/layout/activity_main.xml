<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="3"
    android:layout_row="4"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_rowSpan="3"
        android:layout_columnSpan="3"
        android:gravity="top"
        android:orientation="vertical"
        android:layout_marginBottom="120dp">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Jogo da Velha"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:layout_margin="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/btn0"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordas" />

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordas" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordas" />

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordas" />

            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn6"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordas" />

            <ImageButton
                android:id="@+id/btn7"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordas" />

            <ImageButton
                android:id="@+id/btn8"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordas" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/btnJogador1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bordas"
            android:src="@drawable/jogador1" />

        <ImageButton
            android:id="@+id/btnJogador2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bordas"
            android:src="@drawable/jogador2" />

        <Button
            android:id="@+id/limparBotao"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:foreground="@drawable/limpar"/>


    </LinearLayout>



</GridLayout>